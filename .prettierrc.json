{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "tabWidth": 4,
    "useTabs": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "jsxSingleQuote": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "no-mixed-operators": true,
    "bracketSpacing": true,
    "plugins": ["prettier-plugin-tailwindcss"]
}
